<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    
    <imports>
        <import resource="Filter/filters.xml"/>
    </imports>
    <parameters>
        <parameter key="lib_imagick" >Imagick</parameter>
        <parameter key="lib_gmagick" >Gmagick</parameter>
        <parameter key="lib_gd" >Gd</parameter>
        <parameter key="transformer_class" >DynImage\Transformer</parameter>
        
    </parameters>
    
    <services>

        <service id="dispatcher" class="Symfony\Component\EventDispatcher\EventDispatcher">
            
        </service>
        <service id="image_manager" class="DynImage\ImageManager">
            <tag name="dynimage.image_manager"/>
        </service>
    </services>
</container>


